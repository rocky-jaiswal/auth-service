{
  "name": "auth-service",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "create-migration": "NODE_ENV=development npx knex migrate:make",
    "migrate-latest": "npx knex migrate:latest",
    "clean": "rm -rf dist/ && mkdir dist",
    "build": "yarn clean && yarn tsc",
    "test": "NODE_ENV=test yarn migrate-latest && NODE_ENV=test yarn jest",
    "lint": "yarn eslint 'src/**/*'",
    "watch-node": "NODE_ENV=development nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "dependencies": {
    "@rockyj/async-utils": "^1.0.5",
    "bcrypt": "^5.0.1",
    "config": "^3.3.3",
    "fastify": "^3.12.0",
    "fastify-static": "^4.2.3",
    "js-yaml": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^1.0.0",
    "openpgp": "^5.2.0",
    "pg": "^8.5.1",
    "purify-ts": "^1.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/concurrently": "^5.2.1",
    "@types/config": "^0.0.38",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^14.14.31",
    "@types/pg": "^7.14.11",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "concurrently": "^6.0.0",
    "eslint": "^8.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^27.5.1",
    "nodemon": "^2.0.7",
    "pem-jwk": "^2.0.0",
    "prettier": "^2.2.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  }
}
